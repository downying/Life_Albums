<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yahobong.server.albums.mapper.AlbumMapper">

    <!-- 앨범을 사용자별로 조회하는 SQL (필요 시 사용) -->
    <select id="findAlbumsByUserNo">
        SELECT albumsNo, userNo, title
        FROM albums
        WHERE userNo = #{userNo}
    </select>
    
    <insert id="insertAlbum" useGeneratedKeys="true" keyProperty="albumNo">
        INSERT INTO albums title
        VALUES #{title}
    </insert>

   
</mapper>
